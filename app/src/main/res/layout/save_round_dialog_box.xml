<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a Date or Unique Round Name"
        android:id="@+id/nameDateTextView"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="@drawable/custom_rounded_corners_transparent"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_margin="5dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameDateEditText"
        android:layout_below="@+id/nameDateTextView"
        android:layout_centerHorizontal="true"
        android:hint="Ex. May 20th 2016"
        android:gravity="center_horizontal"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameDateEditText"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter a Course Name"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="@drawable/custom_rounded_corners_transparent"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_margin="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courseNameEditText"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:hint="Ex. Pier Park"
            android:gravity="center_horizontal" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseNameEditText"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate your Round 1-10"
                android:id="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:background="@drawable/custom_rounded_corners_transparent"
                android:textColor="#ffffff"
                android:padding="10dp"
                android:layout_margin="5dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/roundRatingDialogEditText"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:hint="Ex. 7"
                android:gravity="center_horizontal" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/roundRatingDialogEditText"
                android:layout_centerHorizontal="true">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Round"
                    android:id="@+id/saveRoundDialogBtn"
                    android:background="@drawable/custom_transparent_btn"
                    android:layout_weight="1"
                    android:padding="30dp"
                    android:layout_margin="3dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancelDialogBtn"
                    android:background="@drawable/custom_rounded_corners_transparent"
                    android:padding="30dp"
                    android:layout_margin="3dp"/>
            </TableRow>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>