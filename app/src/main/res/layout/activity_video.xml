<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josh.myapplication.VideoActivity"
    android:background="@drawable/woods">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Disc Golf?"
        android:id="@+id/whatIsDiscGolfBtn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How to Putt"
        android:id="@+id/howToPuttBtn"
        android:layout_below="@+id/whatIsDiscGolfBtn"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="howToThrowBackhandBtn"
        android:id="@+id/button3"
        android:layout_below="@+id/howToPuttBtn"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
